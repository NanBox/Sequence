/* pages/common/common.wxss */

/*参与人头像*/

.img-list {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.img-list-width1 {
  width: 84rpx;
}

.img-list-width2 {
  width: 124rpx;
}

.img-list-width3 {
  width: 164rpx;
}

.img-list-width4 {
  width: 204rpx;
}

.img-list-width5 {
  width: 244rpx;
}

.img-list .img {
  position: absolute;
  width: 74rpx;
  height: 74rpx;
  border-radius: 100%;
  border: 5rpx solid white;
}

.img-list .img1 {
  left: 0;
}

.img-list .img2 {
  left: 40rpx;
}

.img-list .img3 {
  left: 80rpx;
}

.img-list .img4 {
  left: 120rpx;
}

.img-list .img5 {
  left: 160rpx;
}

/*单行文字*/

.single-line-text {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/*空白页面*/

.empty-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-page .empty-text {
  font-size: 36rpx;
  color: gray;
  font-weight: bold;
  margin-top: 400rpx;
}

/* 创建按钮 */

.create-button {
  width: 116rpx;
  height: 116rpx;
  border-radius: 100%;
  background-color: #ea4c89;
  position: fixed;
  bottom: 0;
  margin: 30rpx;
  border: 8rpx solid #f5c5d7;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.create-button .img {
  height: 50rpx;
  width: 50rpx;
}
