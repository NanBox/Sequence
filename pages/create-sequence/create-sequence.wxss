@import "../../common/common.wxss";

page {
  background-color: white;
}

.input-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  margin-top: 40rpx;
}

.input-item .text {
  line-height: 80rpx;
  font-size: 28rpx;
  color: #9fc3f9;
  margin-left: 30rpx;
}

.input-item .input {
  flex: 1;
  height: 80rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  border: 1rpx solid #9fc3f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #569de8;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.input-item .placeholder {
  color: #9fc3f9;
  line-height: 80rpx;
}

.checkbox-item {
  display: flex;
  flex-direction: row;
  margin-top: 66rpx;
}

.checkbox-item .text {
  font-size: 28rpx;
  color: #9fc3f9;
  margin-left: 30rpx;
}

.checkbox-item .checkbox-group {
  display: flex;
  flex-direction: column;
}

.checkbox-item .checkbox-group .checkbox {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 40rpx;
}

.checkbox-item .checkbox-group .checkbox .img {
  width: 30rpx;
  height: 30rpx;
}

.checkbox-item .checkbox-group .checkbox .explain {
  font-size: 28rpx;
  margin-left: 23rpx;
}

.checkbox-item .checkbox-group .checkbox .check {
  color: #569de8;
}

.checkbox-item .checkbox-group .checkbox .uncheck {
  color: #9fc3f9;
}

.submit {
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.submit .btn {
  width: 690rpx;
  line-height: 94rpx;
  text-align: center;
  color: white;
  border-radius: 78rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.clickable {
  background-color: #569de8;
  border: 8rpx solid #aacef3;
}

.unclickable {
  background-color: #9fc3f9;
  border: 8rpx solid #cfe1fc;
}

.bottom {
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
  background-color: white;
  font-size: 30rpx;
}
