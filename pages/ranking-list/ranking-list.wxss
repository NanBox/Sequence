@import "../../common/common.wxss";

page {
  background-color: #f8f8f8;
}

.ranking {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  height: 128rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.ranking .rank {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.ranking .rank .num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #e8f0fc;
  border-radius: 100%;
  font-size: 32rpx;
  color: #569de8;
  margin-top: 12rpx;
}

.ranking .img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin-left: 20rpx;
}

.ranking .name {
  flex: 1;
  font-size: 28rpx;
  color: #569de8;
  font-weight: bold;
  margin-left: 30rpx;
}

.ranking .count {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.ranking .unit {
  font-size: 28rpx;
  color: #c7dcfc;
}

.red {
  color: #ea4c89;
}

.blue {
  color: #569de8;
}

/* 创建按钮 */

.switch-button {
  position: fixed;
  bottom: 0;
  right: 0;
  margin: 30rpx;
}

.switch-button .button {
  width: 116rpx;
  height: 116rpx;
  border-radius: 100%;
  background-color: #ea4c89;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 8rpx solid #f5c5d7;
}

.switch-button .text {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.show-button {
  transform: translateY(0);
  transition: 0.3s;
}

.hide-button {
  transform: translateY(180rpx);
  transition: 0.3s;
}
