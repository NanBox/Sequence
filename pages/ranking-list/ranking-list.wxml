<import src="../../common/common.wxml" />

<view class="tab-bar">
  <view class="tab {{selectSequence?'select':'unselect'}}" bindtap="switchTab" id="join">最长接龙</view>
  <view class="tab {{selectSequence?'unselect':'select'}}" bindtap="switchTab" id="follow">实力碰词er</view>
</view>

<block wx:if="{{selectSequence}}">
  <block wx:if="{{sequenceList.length>0}}">
    <view wx:for="{{sequenceList}}" class="ranking">
      <view class="rank">
        <image wx:if="{{index==0}}" src="/images/first.png" mode="aspectFit" />
        <image wx:elif="{{index==1}}" src="/images/second.png" mode="aspectFit" />
        <image wx:elif="{{index==2}}" src="/images/third.png" mode="aspectFit" />
        <view wx:else class="num">{{index+1}}</view>
      </view>
      <view class="name">{{item.title}}</view>
      <view class="count {{index<3?'red':'blue'}}">{{item.idiomCount}}</view>
      <view class="unit">条</view>
    </view>
  </block>
  <block wx:elif="{{getJoinComplete}}">
    <template is="empty-page" data="{{text:'总排行榜为空，快和朋友玩接龙上榜！'}}" />
  </block>
</block>
<block wx:else>

</block>