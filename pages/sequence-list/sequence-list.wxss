@import "../../common/common.wxss";

page {
  background-color: #f8f8f8;
}

.my-sequence {
  color: gray;
  font-size: 32rpx;
  margin: 20rpx;
}

.sequence {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  height: 120rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx #eee solid;
}

.sequence .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sequence .text .name {
  color: #569de8;
  font-size: 32rpx;
  font-weight: bold;
}

.sequence .text .lastIdiom {
  color: gray;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.sequence .two {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sequence .two .img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
}

.sequence .two .vs {
  color: gray;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
