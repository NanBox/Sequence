@import "../../common/common.wxss";

page {
  background-color: #f8f8f8;
}

.sequence {
  display: flex;
  flex-direction: row;
  background: white;
  height: 128rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.sequence .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sequence .text .name {
  color: #569de8;
  font-size: 32rpx;
  font-weight: bold;
}

.sequence .text .lastIdiom {
  color: gray;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.sequence .all {
  width: 244rpx;
  display: flex;
  justify-content: center;
}

.img-list {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 27rpx;
}

.img-list-width1 {
  width: 84rpx;
}

.img-list-width2 {
  width: 124rpx;
}

.img-list-width3 {
  width: 164rpx;
}

.img-list-width4 {
  width: 204rpx;
}

.img-list-width5 {
  width: 244rpx;
}

.img-list .img {
  position: absolute;
  width: 74rpx;
  height: 74rpx;
  border-radius: 100%;
  border: 5rpx solid white;
}

.img-list .img1 {
  left: 0;
}

.img-list .img2 {
  left: 40rpx;
}

.img-list .img3 {
  left: 80rpx;
}

.img-list .img4 {
  left: 120rpx;
}

.img-list .img5 {
  left: 160rpx;
}

.sequence .group {
  min-width: 244rpx;
  max-width: 300rpx;
  font-size: 28rpx;
  color: gray;
  text-align: center;
  line-height: 128rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sequence .two {
  width: 244rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sequence .two .img {
  width: 74rpx;
  height: 74rpx;
  border-radius: 100%;
  border: 5rpx solid white;
}

.sequence .two .vs {
  flex: 1;
  color: gray;
  font-size: 30rpx;
  text-align: center;
}

.next-page {
  width: 100%;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.next-page .text {
  font-size: 32rpx;
  color: #ccc;
}

/* 创建按钮 */

.create-button {
  position: fixed;
  bottom: 0;
  right: 0;
  margin: 30rpx;
}

.create-button .button {
  width: 116rpx;
  height: 116rpx;
  border-radius: 100%;
  background-color: #ea4c89;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 8rpx solid #f5c5d7;
}

.create-button .img {
  height: 50rpx;
  width: 50rpx;
}

.show-button {
  transform: translateY(0);
  transition: 0.3s;
}

.hide-button {
  transform: translateY(180rpx);
  transition: 0.3s;
}
