@import "../../common/common.wxss";

page {
  background-color: #f8f8f8;
}

.idiom-item {
  display: flex;
  flex-direction: row;
  margin-top: 33rpx;
}

.idiom-item .creator-img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin-left: 30rpx;
}

.idiom-item .content {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}

.idiom-item .content .text-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 38rpx;
  margin-left: 20rpx;
}

.idiom-item .content .text-content .creator-name {
  flex: 1;
  font-size: 28rpx;
  color: #569de8;
}

.idiom-item .content .text-content .date {
  font-size: 26rpx;
  color: gray;
}

.idiom-item .content .idiom-content {
  display: flex;
  flex-direction: row;
}

.idiom-item .content .idiom-content .idiom {
  position: relative;
}

.idiom-item .content .idiom-content .idiom .background {
  width: 390rpx;
  height: 151rpx;
}

.idiom-item .content .idiom-content .idiom .text {
  position: absolute;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  top: 55rpx;
  left: 38rpx;
}

.idiom-item .content .idiom-content .like {
  margin-top: 53rpx;
  margin-left: 25rpx;
}

.idiom-item .content .idiom-content .like .img{
  width: 35rpx;
  height: 35rpx;
}

.idiom-item .content .idiom-content .like .num {
  font-size: 26rpx;
  color: #c7dcfc;
  margin-left: 20rpx;
}

.idiom-item .content .idiom-content .unlike {
  width: 35rpx;
  height: 35rpx;
  margin-left: 55rpx;
}

.idiom-item .content .idiom-content .unlike-num {
  font-size: 26rpx;
  color: #c7dcfc;
  margin-left: 20rpx;
}

