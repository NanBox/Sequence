@import "../../common/common.wxss";

page {
  background-color: #f8f8f8;
}

.tool-bar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 60rpx;
  background-color: #569de8;
  font-size: 30rpx;
  color: white;
  font-weight: bold;
}

.tool-bar .text {
  max-width: 620rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.tool-bar .refresh {
  position: absolute;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  margin-right: 15rpx;
}

.img-list {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
}

.img-list-width1 {
  width: 48rpx;
}

.img-list-width2 {
  width: 78rpx;
}

.img-list-width3 {
  width: 108rpx;
}

.img-list-width4 {
  width: 138rpx;
}

.img-list-width5 {
  width: 168rpx;
}

.img-list .img {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
}

.img-list .img1 {
  left: 0;
}

.img-list .img2 {
  left: 30rpx;
}

.img-list .img3 {
  left: 60rpx;
}

.img-list .img4 {
  left: 90rpx;
}

.img-list .img5 {
  left: 120rpx;
}

.tool-bar .all-text {
  line-height: 60rpx;
  margin-left: 20rpx;
}

.tool-bar .two {
  width: 244rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tool-bar .two .img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
}

.tool-bar .two .vs {
  flex: 1;
  font-weight: bold;
  text-align: center;
}

.scroll {
  position: absolute;
  width: 100%;
  left: 0;
  top: 60rpx;
  right: 0;
}

.canInput {
  bottom: 100rpx;
}

.cantInput {
  bottom: 0;
}

.idiom-item {
  display: flex;
  flex-direction: row;
  padding-top: 33rpx;
}

.idiom-item .creator-img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin-left: 30rpx;
}

.idiom-item .content {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}

.idiom-item .content .text-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 38rpx;
  margin-left: 20rpx;
}

.idiom-item .content .text-content .creator-name {
  flex: 1;
  font-size: 28rpx;
  color: #569de8;
}

.idiom-item .content .text-content .date {
  font-size: 26rpx;
  color: #ccc;
}

.idiom-item .content .idiom-content {
  display: flex;
  flex-direction: row;
}

.idiom-item .content .idiom-content .idiom {
  position: relative;
}

.idiom-item .content .idiom-content .idiom .background {
  width: 390rpx;
  height: 151rpx;
}

.idiom-item .content .idiom-content .idiom .text {
  position: absolute;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  top: 50rpx;
  left: 38rpx;
}

.idiom-item .content .idiom-content .like {
  display: flex;
  flex-direction: row;
  margin-top: 53rpx;
  margin-left: 25rpx;
}

.idiom-item .content .idiom-content .like .img {
  width: 35rpx;
  height: 35rpx;
}

.idiom-item .content .idiom-content .like .num {
  font-size: 26rpx;
  color: #c7dcfc;
  margin-left: 15rpx;
}

.hint {
  width: 100%;
  display: flex;
  justify-content: center;
}

.hint .text {
  width: 60%;
  border-radius: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #ababab;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: white;
  font-size: 22rpx;
}

.input-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  bottom: 0;
  background-color: white;
  width: 100%;
}

.input-bar .input {
  flex: 1;
  font-size: 28rpx;
  color: #569de8;
  padding-left: 50rpx;
}

.input-bar .placeholder {
  color: #9fc3f9;
}

.input-bar .send {
  width: 64rpx;
  height: 64rpx;
  margin-right: 47rpx;
}
